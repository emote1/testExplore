# ============================================================
# Reef Explorer — Production Environment Configuration
# ============================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ─── PostgreSQL ─────────────────────────────────────────────
POSTGRES_DB=reef_explorer
POSTGRES_USER=reef
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ─── Hasura GraphQL Engine ──────────────────────────────────
HASURA_GRAPHQL_ADMIN_SECRET=CHANGE_ME_STRONG_SECRET
HASURA_GRAPHQL_ENABLE_CONSOLE=false
HASURA_GRAPHQL_DEV_MODE=false
# Set to 'public' only if you want unauthenticated read access
# For production, consider removing this or using Hasura permissions
HASURA_GRAPHQL_UNAUTHORIZED_ROLE=

# ─── Indexer Configuration ──────────────────────────────────
# Reef Chain RPC endpoint
RPC_URL=wss://rpc.reefscan.info/ws

# Start block for indexing (0 = auto-detect from cursor or recent blocks)
START_BLOCK=0

# Number of blocks to process per batch
BATCH_SIZE=50

# Polling interval when caught up (milliseconds)
POLL_INTERVAL_MS=6000

# PostgreSQL connection for indexer
PG_HOST=postgres
PG_PORT=5432
PG_DB=reef_explorer
PG_USER=reef
PG_PASS=CHANGE_ME_STRONG_PASSWORD

# ─── Optional: pgAdmin (disable in production) ─────────────
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=CHANGE_ME_ADMIN_PASSWORD
